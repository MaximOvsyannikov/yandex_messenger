<main class="signin__root">
  <div class="signin__card">
    <h1 class="signin__title">Вход</h1>
    <form class="signin__form">
      <div class="signin__form-input-container">
        {{>input type="text" name="login" value="" placeholder="login" }}
        {{>input type="password" name="password" placeholder="password" value="" }}
      </div>
      <div>
        {{>button type="submit" variant="primary" children="Авторизоваться"}}
        {{>button variant="secondary" children="Нет аккаунта?" onclick="renderPage('signup')"}}
      </div>
    </form>
  </div>
</main>
